@using System.Globalization
<RadzenChart>
    <RadzenLineSeries Data="@dings" CategoryProperty="" Title="PriceAvg" ValueProperty="Price" RenderingOrder="1">
        <RadzenMarkers MarkerType="MarkerType.Circle" />
    </RadzenLineSeries>
    <RadzenLineSeries Data="@dings" CategoryProperty="" Title="UnrolledAvg" ValueProperty="Price" RenderingOrder="2">
        <RadzenMarkers MarkerType="MarkerType.Circle" />
    </RadzenLineSeries>
    <RadzenCategoryAxis Padding="20" FormatString="{0:MMM}" />
    <RadzenValueAxis Formatter="@FormatDate">
        <RadzenGridLines Visible="true" />
        <RadzenAxisTitle Text="Price in p" />
    </RadzenValueAxis>
</RadzenChart>

@code {
    [Parameter]
    public Riven Value { get; set; }
    public Price[] dings { get; set; }
    protected override async Task OnInitializedAsync()
    {
        dings = Value.Prices.ToArray();
    }

    string FormatDate(object value)
    {
        return ((double)value).ToString("C0", CultureInfo.CreateSpecificCulture("en-US"));
    }
}